
<div class="container m-0 p-0 h-100 w-100">
    <div class="row m-0 p-0 h-100 align-items-top justify-content-center">

        <div class="col-3 text-center m-2">
            <a class="btn btn-green shadow m-2 w-100" href="/Sudoku/Game/NewGame" role="button" lang="@ViewBag.CultureName">@Localizer["Sudoku"]</a>
        </div>
        <div class="col-3 text-center m-2">
            &nbsp;
        </div>
        <div class="col-3 text-center m-2">
            &nbsp;
        </div>

    </div>  
</div>

<input type="hidden" id="cultureId" name="cultureId" value="@ViewBag.CultureName">

@section styles
{
    <link rel="stylesheet" type="text/css" media="screen" href="/css/application.min.css" asp-append-version="true" nonce="@ViewBag.StyleNonce" />
}

@section scripts
{
    <script src="/js/application.min.js" asp-append-version="true" nonce="@ViewBag.ScriptNonce"></script>
    <script src="/js/home.min.js" asp-append-version="true" nonce="@ViewBag.ScriptNonce"></script>
    <script nonce="@ViewBag.ScriptNonce">

        $(document).ready(function () {
            Home.Index();
        });

    </script>
}
